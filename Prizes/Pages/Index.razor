@page "/{DrawsId}"
@layout MainLayout
@inject NavigationManager navigationManager
@inject IStringLocalizer<App> Localizer
@inject IJSRuntime JSRuntime;

<style>
    .login-area .topbar {
        margin-bottom: 25px !important;
    }

    .ar-direction {
        direction: rtl;
    }

        .ar-direction .language-options {
            float: left;
        }

    .heading1 {
        font-size: 40px;
    }

    .hd-direction {
        text-align: right !important;
    }
</style>
<div class="login-area ">
    <div class="topbar">
        <a href="javascript:void(0);">
            <img src="images/routes-logo.svg" width="40" height="40" alt="" />
        </a>
        <ChooseLanguage />
    </div>
    <div class="title">
        <p class="heading1">@Localizer["Heading1"]</p>
        <p>@Localizer["Heading2"]</p>
    </div>
    <AlertMessage Message="@message" MessageType="@messageType" />
    <div class="form-holder ">
        <EditForm Model="candidatesModel" OnValidSubmit="SaveCandidates">
            <DataAnnotationsValidator />
            <ValidationSummary />
            <div>
                <div class="form-group form-filds">
                    <input type="text" @bind="candidatesModel.Name" class="form-control cname" placeholder="@Localizer["Name"]">
                    <span asp-validation-for="Name"></span>
                </div>
                <div class="form-group form-filds">
                    <input type="text" @bind="candidatesModel.Email" class="form-control cemail" placeholder="@Localizer["Email"]">
                </div>
                <div class="form-group form-filds">
                    <input type="text" @bind="candidatesModel.PhoneNumber" class="form-control cnumber" placeholder="@Localizer["Number"]">
                </div>
                <div class="form-group form-filds">
                    <input placeholder="@Localizer["DateOfBirth"]" class="form-control textbox-n cbdate" type="text" id="date" @bind="candidatesModel.DateOfBirth" onfocus="(this.type='date')" onblur="(this.type='text')" max="@maxDate" min="@minDate">
                </div>
                <div class="form-group form-filds">
                    <select class="form-control cnationalities" @bind="candidatesModel.NationalityId">
                        <option value="0">@Localizer["SelectNationality"]</option>
                        @foreach (var item in nationalitiesList)
                        {
                            <option value="@item.NationalityId">@item.Name</option>
                        }
                    </select>
                </div>

            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-white btn-lg disabled candidate-submit">@Localizer["Submit"]</button>
            </div>

            <div class="footer-section">
                <img src="images/win-with-routes.png" alt="win-with-routes.png" />
            </div>
        </EditForm>

    </div>
</div>


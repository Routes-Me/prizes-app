@page "/"
@layout MainLayout
@inject NavigationManager navigationManager

<div class="login-area">
    <div class="title">
        <h2>Enter Our Prize Draws to Win!</h2>
        <p>Sign up now to enter for a chance to win prizes from leading brands and retailers</p>
    </div>
    <AlertMessage Message="@message" MessageType="@messageType" />
    <div class="form-holder ">
        <EditForm Model="model" OnValidSubmit="RegisterUser">
            <DataAnnotationsValidator />
            <ValidationSummary />
            <div>
                <div class="form-group form-filds">
                    <input type="text" @bind="model.Name" class="form-control" placeholder="Name">
                </div>
                <div class="form-group form-filds">
                    <input type="text" @bind="model.Email" class="form-control" placeholder="Email">
                </div>
                <div class="form-group form-filds">
                    <input type="text" @bind="model.PhoneNumber" class="form-control" placeholder="Phone Number">
                </div>
                <div class="form-group form-filds">
                    <input asp-for="DateOfBirth" @bind="model.DateOfBirth" id="datepicker" type="text" class="form-control" MaxLength="10" autocomplete="off" placeholder="Date of Birth" />
                </div>
                <div class="form-group form-filds">
                    <select class="form-control" @bind="model.NationalityId">
                        <option value="0">Select Nationality</option>
                        @foreach (var item in nationalitiesModel)
                        {
                            <option value="@item.NationalityId">@item.Name</option>
                        }
                    </select>
                </div>

            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-white btn-lg">Submit</button>
            </div>

            <div class="footer-section">
                <img src="images/win-with-routes.png" alt="win-with-routes.png" />
            </div>
        </EditForm>

    </div>
</div>

